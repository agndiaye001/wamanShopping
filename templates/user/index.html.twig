{% extends 'base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block body %}
    <header class="jumbotron jumbotron-fluid bg-primary text-white text-center">
        <div class="container">
            <h1 class="display-4">Bienvenue sur notre site e-commerce</h1>
            <p class="lead">Notre site regroupe toutes les dernières tendances de la mode à petits prix.</p>
        </div>
    </header>
    <div class="container my-5">
        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header bg-primary text-white">Users populaires</div>
                    <ul class="list-group list-group-flush">
                        {% for user in users %}
                            <li class="list-group-item">{{ user.id }}</li>
                            <li class="list-group-item">{{ user.email}}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
          
        </div>
    </div>
{% endblock %}
